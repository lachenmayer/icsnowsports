@import 'reset'
@import 'grid'

$blue #6CDFEA

body
  font-family 'Lato', Arial, sans-serif
  line-height 1.8

h1
  font-size 36px
h2
  font-size 36px
  font-style italic

p
  font-size 18px
  margin-bottom 1em

a
  color black
  text-decoration none
  font-weight bold
  border-bottom 3px solid #930541

ul
  font-size 24px
  text-align center

.background-photo
  position absolute
  top 0
  left 0
  width 100%
  height 900px
  overflow hidden
  z-index -1

.background-photo img
  position absolute
  top 0
  left 0
  //width 100%

.photo
  position relative
  width 100%
  overflow hidden
  height 400px

.photo img
  position absolute
  top 0
  left 0
  z-index -1

.content
  background white
  width 100%
  box-shadow 0 0 5px 5px rgba(black, 0.2)
  padding 50px 0 50px 0

.text
  max-width _gridsystem-width
  margin auto

#title
  background-color rgba(255, 255, 255, 0.4)
  box-shadow none
  text-align center
  margin-top 200px
  margin-bottom 200px
  img
    max-width 100%

.buttons
  margin-top 1em
  a
    padding 10px 15px 10px 15px
    margin 5px
    border-radius 5px
    background black
    color white
    text-decoration none
    font-size 18px
    font-weight bold
    &visited
      color white
      text-decoration none

.question
  font-style italic
  font-weight bold

#committee
  clearfix()
  ul
    margin-top 1em
  li
    column(3)
  .name
    font-style italic
    font-weight bold
    margin-bottom 0